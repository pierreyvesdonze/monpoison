    {{ form_widget(form.sex) }}
    <br>
    <br>
    {{ form_label(form.weight) }}
    <br>
    {{ form_widget(form.weight) }}
    <br>
    <br>
    {{ form_label(form.quantity) }}
    <br>
    {{ form_widget(form.quantity) }}
    <br>
    <br>
    {{ form_label(form.degree) }}
    <br>
    {{ form_widget(form.degree) }}
    <br>
    <br>
    {{ form_row(form.submit) }}
    {{ form_end(form) }}
</div>

{% endblock %}