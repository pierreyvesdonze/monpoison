{% extends 'base.html.twig' %}
{% block title %}Test d'évaluation de dépendance à l'alcool{% endblock %}

{% block metadescription %}
<meta name="description"
    content="Êtes-vous dépendant à l'alcool ? Faites le test ! Apprenez à gérer efficacement vos consommations au quotidien !">
{% endblock %}

{% block body %}

<br><br>

<div class="container">
    <h1>Evaluez votre degré de dépendance à l'alcool</h1>
    <br>
    {{ form_start(form) }}
    {{ form_label(form.frequencyComsumption) }}
    <br>
    {{ form_widget(form.frequencyComsumption) }}
    <br>
    <br>
    {{ form_label(form.drinkByDay) }} 
    <br>
    {{ form_widget(form.drinkByDay) }}
    <br>
    <br>
    {{ form_label(form.fiveDrinksFrequency) }} 
    <br>
    {{ form_widget(form.fiveDrinksFrequency) }}
    <br>
    <br>
    {{ form_label(form.stopControl) }} 
    <br>
    {{ form_widget(form.stopControl) }}
    <br>
    <br>
    {{ form_label(form.failAttempt) }} 
    <br>
    {{ form_widget(form.failAttempt) }}
    <br>
    <br>
    {{ form_label(form.needFirstDrink) }} 
    <br>
    {{ form_widget(form.needFirstDrink) }}
    <br>
    <br>
    {{ form_label(form.regrets) }} 
    <br>
    {{ form_widget(form.regrets) }}
    <br>
    <br>
    {{ form_label(form.noMemory) }} 
    <br>
    {{ form_widget(form.noMemory) }}
    <br>
    <br>
    {{ form_row(form.submit) }}
    {{ form_end(form) }}
</div>

{% endblock %}
