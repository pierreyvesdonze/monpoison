{% extends 'base.html.twig' %}

{% block title %}Formulaire d'ajout d'une consommation{% endblock %}

{% block metadescription %}
<meta name="description"
    content="Entrez une consommation, sa date, ses quantités, son budget grâce à ce formulaire">
{% endblock %}

{% block body %}

<br><br>

<div class="container">
        {{form_start(form)}}
        {{form_label(form.alcool)}}
        <br>
        {{form_widget(form.alcool)}}
        <br>
        <br>
        {{form_label(form.quantity)}}
        <br>
        {{form_widget(form.quantity)}}
        <br>
        <br>
        {{form_label(form.cost)}}
        <br>
        {{form_widget(form.cost)}}
        <br>
        <br>
        {{form_label(form.word)}}
        <br>
        {{form_widget(form.word)}}
        <br>
        <br>
        {{form_label(form.date)}}
        <br>
        {{form_widget(form.date)}}
        <br>
        <br>
        {{form_widget(form.submit)}}

        {{form_end(form)}}
        <br>
        <a class="custom-btn" href="{{ path('drink_calendar') }}">Annuler</a>
</div>
{% endblock %}